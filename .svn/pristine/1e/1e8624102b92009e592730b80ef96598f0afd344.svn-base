@charset "utf-8";
*{
    overflow: hidden;
}
body {
	background-color: #E5F1FF;
}
.oli-big {
	width: 100%;
	height: 99%;
	overflow-x: hidden;
	overflow-y: auto;
}
.this-time {
	width: 100%;
	height: 35px;
	float: left;
	line-height: 35px;
	color: #4C4C4C;
	background-color: white;
}
.this-time>.times {
	margin-left: 10px;
	font-size: 1.5em;
}
.this-time>.new-time {
	margin-left: 10px;
	font-size: 1.5em;
}
.oli-list {
	width: 100%;
	height: auto;
}
.oli-list>li {
	width: 100%;
	height: 80px;
	border-bottom: 1px solid #C8C8C8;
}
.oli-city {
	float: left;
	width: 90%;
	margin-left: 15px;
	height: 20px;
	color: #000100;
	line-height: 20px;
}
.oli-price{
	width: 100%;
	height: 60px;
	background-color: white;
}
.oli-price>span{
	width: 49%;
	height: 25px;
	float: left;
	line-height: 30px;
	text-align: center;
	color: #333333;
}
.oli-price>span>a{
	color: #B40001;
	font-size: 1.2em;
}


























