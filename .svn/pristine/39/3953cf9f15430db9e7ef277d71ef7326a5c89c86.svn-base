@charset "utf-8";
.this-state {
	width: 100%;
	height: auto;
	background-color: white;
	margin-top: 20px;
}
.this-state>span {
	float: left;
}
.this-limit {
	width: 90%;
	height: 25px;
	line-height: 25px;
	margin-left: 2%;
	color: #8A8A8A;
}
.this-limit>a {
	color: #8A8A8A;
}
.limit-munber {
	width: 50%;
	margin-left: 25%;
	height: 120px;
}
.limit-munber>a {
	width: auto;
	height: 100%;
	float: left;
	text-align: center;
	line-height: 120px;
}
.limit-munber>.limit-day {
	width: 43%;
	font-size: 3em;
	color: #00C7BC;
	font-size: 8em;
	font-family: monospace;
}
.limit-munber>.limit-sum {
	font-size: 1.5em;
}
.limit-desc {
	width: 95%;
	margin-left: 2%;
	line-height: 15px;
	height: auto;
	font-size: 0.8em;
	color: #898989;
	margin-bottom: 15px;
}
.limit-gz {
	width: 100%;
	height: 200px;
	border-bottom: 1px solid #C8C8C8;
}
.limit-gz>li {
	border-top: 1px solid #C8C8C8;
	border-right: 1px solid #C8C8C8;
	width: 33%;
	float: left;
	height: 100px;
}
.limit-one {
	width: 80%;
	float: left;
	margin-left: 10%;
	color: #787878;
	line-height: 25px;
}
.limit-index{
	width: 100%;
	height: 60px;
	float: left;
}
.limit-index>a{
	float: left;
	height: 100%;
	width: auto;
	text-align: center;
	line-height: 60px;
	font-size: 1.5em;
	line-height: 75px;
}
.limit-index>a.numbers{
	width: auto;
	font-size: 3em;
	line-height: 60px;
}
.marginleft15{
	margin-left: 15%;
}
.limit-index>a.fontsize2{
	font-size: 2em;
}
















