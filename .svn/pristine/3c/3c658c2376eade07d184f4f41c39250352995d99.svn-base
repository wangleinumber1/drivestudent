.next-ys {
	float: left;
	width: 100%;
	height: 18px;
	text-align: center;
	line-height: 15px;
}
.auther-two {
	width: 100%;
	height: 50px;
	margin-top: 20px;
	background-image: url(../../img/auther-two.png);
	background-position: center;
	background-repeat: no-repeat;
	background-size: 60%;
}
.auther-two>li{
	width: 20%;
	height: 50px;
	float: left;
}
.auther-two>li>img{
	width: 25px;
	margin: 12.5px 18px;
}


















